<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".MoreFragment">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8FA1D1"
            android:searchIcon="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/animate2"
                            android:layout_width="90dp"
                            android:layout_height="92dp"
                            android:elevation="23dp"
                            android:src="@drawable/length"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conv1"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/animate3"
                            android:layout_width="90dp"
                            android:layout_height="92dp"
                            android:elevation="23dp"
                            android:src="@drawable/number"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conv2"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/animate1"
                            android:layout_width="90dp"
                            android:layout_height="92dp"
                            android:elevation="32dp"
                            android:src="@drawable/conversion"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="conv3"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">




                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/animatearrow1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:src="@drawable/play"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintStart_toEndOf="@id/animate3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.507"
                        />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>







                </LinearLayout>


            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollView1"
                android:layout_marginTop="75dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2d"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/animate4"
                                android:layout_width="90dp"
                                android:layout_height="92dp"
                                android:layout_gravity="center"
                                android:elevation="12dp"
                                android:src="@drawable/twod" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="2D"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3d"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/animate5"
                                android:layout_width="90dp"
                                android:layout_height="92dp"
                                android:elevation="12dp"
                                android:src="@drawable/threed" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="2D"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>


            <HorizontalScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollView2"
                android:layout_marginTop="79dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/animatearrow3"
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="32dp"
                        android:src="@drawable/play"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageButton23"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.492" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton21"
                        android:layout_width="92dp"
                        android:layout_height="91dp"
                        android:layout_marginStart="19dp"
                        android:elevation="12dp"
                        android:src="@drawable/profit"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton22"
                        android:layout_width="78dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="4dp"
                        android:elevation="12dp"
                        android:src="@drawable/interest"
                        app:layout_constraintStart_toEndOf="@id/imageButton21"
                        app:layout_constraintTop_toTopOf="@id/imageButton21" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton23"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="1dp"
                        android:elevation="12dp"
                        android:src="@drawable/gdp"
                        app:layout_constraintStart_toEndOf="@id/imageButton22"
                        app:layout_constraintTop_toTopOf="@id/imageButton22" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/scrollView4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/textView5"
                android:layout_marginTop="75dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/animatearrow4"
                        android:layout_width="38dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="28dp"
                        android:src="@drawable/play"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageButton33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.538" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton31"
                        android:layout_width="92dp"
                        android:layout_height="91dp"
                        android:layout_marginStart="16dp"
                        android:elevation="10dp"
                        android:src="@drawable/waves"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton32"
                        android:layout_width="78dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="4dp"
                        android:elevation="12dp"
                        android:src="@drawable/electric"
                        app:layout_constraintStart_toEndOf="@id/imageButton31"
                        app:layout_constraintTop_toTopOf="@id/imageButton31" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageButton33"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="1dp"
                        android:elevation="12dp"
                        android:src="@drawable/clock"
                        app:layout_constraintStart_toEndOf="@id/imageButton32"
                        app:layout_constraintTop_toTopOf="@id/imageButton32" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_below="@+id/scrollView2"
                android:layout_marginBottom="-58dp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="23dp"
                android:text="Economics"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignBottom="@+id/scrollView1"
                android:layout_below="@+id/scrollView1"
                android:layout_marginBottom="-58dp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="32dp"
                android:text="Mensuration"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignBottom="@+id/scrollView3"
                android:layout_below="@+id/scrollView3"
                android:layout_marginBottom="-58dp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="23dp"
                android:text="Physics"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginLeft="16sp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="66dp"
                android:text="Converter"
                android:textSize="18sp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
</ScrollView>






